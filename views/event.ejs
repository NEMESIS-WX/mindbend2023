        </div>
        <div class="sub-container-2">
          <input type="radio" name="tabs" id="tab_3" />
          <label for="tab_3">
            <div class="content">
              <div class="contacts">
                <% event.contacts.forEach(function(e,id){ %>
                <div class="contact">
                  <h2><%=e.name%></h2>
                  <p><%=e.phone%></p>
                </div>
                <% }); %>
              </div>
            </div>
          </label>
          <input type="radio" name="tabs" id="tab_2" />
          <label for="tab_2">
            <div class="content">
              <div class="acc-container">
                <% event.faqs.forEach(function(e,id){ %>
                <button class="acc-btn"><%=id+1%>. <%=e.q%></button>
                <div class="acc-content">
                  <p>A. <%=e.a%></p>
                </div>
                <% }); %>
              </div>
            </div>
          </label>
          <input type="radio" name="tabs" id="tab_1" />
          <label for="tab_1">
            <div class="content">
              <ul class="rules">
                <% event.rules.forEach(function(e,id){ %>
                <li><p><%=e%></p></li>
                <% }); %>
              </ul>
            </div>
          </label>
          <input type="radio" name="tabs" id="tab_0" />
          <label for="tab_0">
            <div class="content">
              <%- event.details %> <% event.timeline.forEach((ev) => {%>
              <p><%= ev %></p>

              <%})%>
            </div>
          </label>
        </div>
