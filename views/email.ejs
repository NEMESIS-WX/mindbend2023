<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MindBend Email</title>

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand fs-3" href="/">
                <img src="/images/mbLogo.jpeg" alt="mindbend" style="height: 64px; width: auto;" />
                Email Subscription Portal
            </a>
        </div>
    </nav>
    <div class="container">
        <div class="row mt-md-4 mt-3">
            <div class="col-md-3">
                <img 
                    src="/images/email.png" 
                    alt="Email" 
                    style="width: 100%; height: auto;"
                />
            </div>
            <div class="col-md-9">
                <div class="card">
                    <div class="card-body">
                        <h3>Send Emails</h3>
                        <% if(error) { %>
                            <div class="alert alert-danger"><%= error %></div>
                        <% } %>
                        <% if(success) { %>
                            <div class="alert alert-success">Mail sent successfully</div>
                        <% } %>
                        <br>
                        <form action="/email/email" method="post">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="Subject" class="form-label">Subject</label>
                                    <input type="text" name="subject" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label for="testEmail" class="form-label">Test Email</label>
                                    <input type="email" name="testEmail" class="form-control" />
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="col">
                                    <label for="body" class="form-label">Email Body (Plain Text)</label>
                                    <textarea class="form-control" name="emailBody" id="emailBody" cols="30" rows="5"></textarea>    
                                </div>
                            </div>
                            <p class="text-muted">
                                Send to test email before broadcasting to check how the email looks.
                            </p>
                            <div>
                                <button name="sendTest" class="btn btn-outline-primary me-2" >Send to test email</button>
                                <button name="broadcast" class="btn btn-primary" >Broadcast</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer style="position: absolute; bottom: 10px; left: 10px;">
        Powered by <a href="https://www.wictronix.com">WictroniX</a>
    </footer>
</body>
</html>
